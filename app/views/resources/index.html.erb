<h1>Resource Repository</h1>
<div class="actions">
  <nav class="round">
    <ul>
      <li><%= link_to "New resource", "resources/new", :class => "action_button round" %></li>
    </ul>
  </nav>
</div>

<%= form_tag resources_path, :method => 'get', :remote => true, :id => "resources_search" do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="resources">
    <%= render 'resource' %>
  </div>

<% end %>


