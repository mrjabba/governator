<h1 class="resource">Resource Repository</h1>

<%= form_tag resources_path, :method => 'get', :remote => true, :id => "resources_search" do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="resources">
    <%= render 'resource' %>
  </div>

<% end %>


