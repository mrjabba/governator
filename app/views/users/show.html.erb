<h1 class="appgroup"><%= link_to "#{@user.appgroup.name}", appgroup_path(@user.appgroup) %></h1>
<h1 class="user indent1">User: <%= @user.username %></h1>

<div class="actions">
  <nav class="round">
    <ul>
        <li><%= link_to "Edit", "#{@user.id}/edit", :class => "action_button round"  %></li>
    </ul>
  </nav>
</div>

  <div class="field">
    <label>Name</label>
    <span class="read"><%= "#{@user.first_name} #{@user.last_name}" %> </span>
  </div>

<h1 class="group">Groups</h1>

<% unless @user.memberships.empty? %>

  <table id="groups_table" class="grid_shaded">
  <tr>
  <th title="Name">Name</th>
  </tr>
  <td>
  <% for member in @user.memberships %>
  <tr>
    <td><%= link_to "#{member.group.name}", member.group %></td>
  </tr>
  <% end %>
  </table>
<% end %>


