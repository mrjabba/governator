<h1>Application Repository</h1>
<div class="actions">
  <nav class="round">
    <ul>
      <li><%= link_to "New app", "apps/new", :class => "action_button round" %></li>
    </ul>
  </nav>
</div>

<%= form_tag apps_path, :method => 'get', :remote => true, :id => "apps_search" do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="apps">
    <%= render 'app' %>
  </div>

<% end %>


