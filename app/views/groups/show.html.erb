
<h1>Group: <%= @group.name %></h1>

<div class="actions">
  <nav class="round">
    <ul>
        <li><%= link_to "Edit", "#{@group.id}/edit", :class => "action_button round"  %></li>
        <li><%= link_to "All Groups", groups_path, :class => "action_button round" %></li>
        <li><%= link_to "Add User", new_membership_path + "?group_id=#{@group.id}", :class => "action_button round"  %></li>
    </ul>
  </nav>
</div>

  <div class="field">
    <label>Description</label>
    <span><%= @group.description %> </span>
  </div>

<h3>Users</h3>

<% if @group.memberships.empty? %>
<div>This group has no users.</div>

<% else %>
  <table id="users_table" class="grid_shaded">
  <tr>
  <th title="Username">Username</th>
  </tr>
  <td>
  <% for member in @group.memberships %>
  <tr>
    <td><%= link_to "#{member.user.username}", member.user %></td>
    <td>
    <%= link_to "Remove", member, :method => :delete,
                                     :confirm => "Remove from this group?",
                                     :title => "Remove",
                                     :class => "action_button_nar round" %>
    </td>
  </tr>
  <% end %>
  </table>
<% end %>

