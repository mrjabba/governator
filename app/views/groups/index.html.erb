<h1>Group Repository</h1>
<div class="actions">
  <nav class="round">
    <ul>
      <li><%= link_to "New Group", "groups/new", :class => "action_button round" %></li>
    </ul>
  </nav>
</div>

<%= form_tag groups_path, :method => 'get', :remote => true, :id => "groups_search" do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>

  <div id="groups">
    <%= render 'group' %>
  </div>

<% end %>


