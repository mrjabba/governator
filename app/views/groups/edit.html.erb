<h1 class="group">Edit Group</h1>

<%= form_for(@group) do |f| %>
  <%= render 'shared/error_messages_group', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :user_tokens, "Users" %><br/>
    <%= f.text_field :user_tokens, "data-pre" => @group.users.map(&:fields).to_json %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => "button round" %>
    <input type="button" id="cancelgroupUpdate" value="Cancel" class="button round" />
  </div>
<% end %>

